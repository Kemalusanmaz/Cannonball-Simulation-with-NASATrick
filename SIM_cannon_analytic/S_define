#include "sim_objects/default_trick_sys.sm"
##include "cannon/include/cannon.h"
##include "ball/include/ball.h"
##include "failure/include/failure.h"

class CannonSimObject : public Trick::SimObject {

    public:
        CANNON cannon;
        FAILURE failure;

        CannonSimObject() {
            ("default_data") cannon_default_data( &cannon, &failure ) ;    
            ("default_data") cannon_reset( &cannon, &failure ) ;
            ("initialization") cannon_init( &cannon, &failure ) ;
            (0.01, "scheduled") cannon_analytic( &cannon, &failure ) ;
            ("shutdown") cannon_shutdown( &cannon ) ;
        }
} ;

class BallSimObject : public Trick::SimObject {

    public:
        BALL ball;
        FAILURE failure;

        BallSimObject() {
            ("default_data") ball_default_data( &ball, &failure ) ;    
            ("default_data") ball_reset( &ball, &failure ) ;
            ("initialization") ball_init( &ball, &failure ) ;
            (0.01, "scheduled") ball_analytic( &ball, &failure ) ;
            ("shutdown") ball_shutdown( &ball ) ;
        }
} ;

CannonSimObject dyn ;

BallSimObject dyn1 ;